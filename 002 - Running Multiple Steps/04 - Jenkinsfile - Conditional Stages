pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	parameters{
		choice(name: 'CHOICE', choices: ['build','test'], description: 'Pick something')
	}
    stages {
		stage('build'){
			when{
				exression { 
					return params.ENVIRONMENT == 'build'
				}
			}
			steps{
				echo 'build'
			}
		}
		stage('test'){
			when{
				exression { 
					return params.ENVIRONMENT == 'test'
				}
			}
			steps{
				echo 'test'
			}
		}
    }
}
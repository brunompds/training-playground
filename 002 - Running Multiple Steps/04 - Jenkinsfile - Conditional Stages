pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
		stage('build'){
			when{
				exression { 
					return params.ENVIRONMENT == 'build'
				}
			}
			steps{
				echo 'build'
			}
		}
		stage('test'){
			when{
				exression { 
					return params.ENVIRONMENT == 'test'
				}
			}
			steps{
				echo 'test'
			}
		}
    }
}
pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                script{
                    def NAME = input message "nome?"
                    def AGE = input message "idade?"
                    echo "$NAME"
                    echo "$AGE"
                }
            }
        }
    }
}
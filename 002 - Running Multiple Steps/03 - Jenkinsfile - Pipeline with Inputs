pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            input{
                message "nome?"
                parameters {
                    string(name: 'NAME', defaultValue: '', description: '')
                }
            }    
            input{
                message "idade?"
                parameters {
                    string(name: 'AGE', defaultValue: '', description: '')
                }
            }   
            steps { 
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}